<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Search and Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/search_bar_bg"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Search for products"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/textSecondary" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Shopping Cart"
                android:src="@drawable/ic_cart" />

            <ImageView
                android:id="@+id/message_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_message"
                android:contentDescription="Messages" />
        </LinearLayout>

        <!-- Tab Bar -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingVertical="8dp"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button 
                        android:id="@+id/btnAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All" 
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    <View
                        android:id="@+id/underlineAll"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorAccent"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button 
                        android:id="@+id/btnWomen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Women" 
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    <View
                        android:id="@+id/underlineWomen"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorAccent"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button 
                        android:id="@+id/btnMen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Men" 
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    <View
                        android:id="@+id/underlineMen"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorAccent"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button 
                        android:id="@+id/btnKids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kids" 
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    <View
                        android:id="@+id/underlineKids"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorAccent"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/homeContentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Banner -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="8dp"
                android:contentDescription="Main Banner"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_banner_placeholder"
                android:background="@color/background" />

            <!-- Category Section -->
            <LinearLayout
                android:id="@+id/categorySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CATEGORY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/seeAllCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all >"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">
                    <!-- Category cards will be added dynamically -->
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAllProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:padding="8dp"/>

    </LinearLayout>
</ScrollView> 